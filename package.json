{
  "name": "root",
  "private": true,
  "license": "MIT",
  "keywords": [
    "Server Side Include",
    "Apache",
    "Nginx"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/kunyan/server-side-include"
  },
  "description": "",
  "engines": {
    "node": ">=16.0.0"
  },
  "os": [
    "darwin",
    "linux"
  ],
  "packageManager": "pnpm@6.32.9",
  "scripts": {
    "prepare": "husky install",
    "preinstall": "npx only-allow pnpm",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage",
    "commit": "cz",
    "clean": "rimraf node_modules **/*/node_modules **/*/dist"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,md,html,css,scss}": [
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "pnpm run lint",
      "pnpm run test"
    ]
  },
  "devDependencies": {
    "@types/node": "17.0.24",
    "@typescript-eslint/eslint-plugin": "5.20.0",
    "@typescript-eslint/parser": "5.20.0",
    "esbuild": "0.14.37",
    "eslint": "8.13.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "husky": "7.0.4",
    "lint-staged": "12.4.0",
    "prettier": "2.6.2",
    "rimraf": "3.0.2",
    "ts-node": "10.7.0",
    "tslib": "2.3.1",
    "typescript": "4.6.3"
  }
}
